<div class="columns">
  <div class="column col-4 col-mx-auto card">
    <div class="card-header">
      <h2>Log in</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "card-body" }) do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.label :remember_me, class: "form-checkbox" do %>
            <%= f.check_box :remember_me %>
            <i class="form-icon"></i> Remember me
          <% end %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.button "Log in", type: "submit", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="card-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
